<p id="notice"><%= notice %></p>

<h1>Carros</h1>

<table>
  <thead>
    <tr>
      <th>Placa</th>
      <th>Modelo</th>
      <th>Chassi</th>
      <th>Ano</th>
        <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carros.each do |carro| %>
      <tr>
        <td><%= carro.placa %></td>
        <td><%= carro.modelo %></td>
        <td><%= carro.chassi %></td>
        <td><%= carro.ano %></td>
        <td><%= carro.try(:cliente).try(:nome) %></td>
        <td><%= link_to 'Detalhes', carro, class: "bt-info bt" %></td>
        <td><%= link_to 'Editar', edit_carro_path(carro), class: "bt-blue bt" %></td>
        <td><%= link_to 'Remover', carro, method: :delete, data: { confirm: 'Are you sure?' }, class: "bt-danger bt" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo carro', new_carro_path, class: "bt-green bt" %>
